@model PGRLF.MainWeb.Forms.FormClasses.Partial.PravnickaOsoba

<fieldset>
    <legend>Právnická osoba</legend>
    <div class="row">
        <div class="large-8 columns">
            @Html.LabelWithAsterixFor(m => m.ObchodniJmeno)
            @Html.EditorFor(m => m.ObchodniJmeno)
            @Html.ValidationMessageFor(m => m.ObchodniJmeno)
        </div>
        <div class="large-4 columns"> 
            @Html.LabelWithAsterixFor(m => m.TypPO)
            @Html.EditorFor(m => m.TypPO)
            @Html.ValidationMessageFor(m => m.TypPO)
        </div>
    </div>
    <div class="row">
        <div class="large-6 columns">
            @Html.LabelWithAsterixFor(m => m.IC)
            @Html.EditorFor(m => m.IC)
            @Html.ValidationMessageFor(m => m.IC)
        </div>
        <div class="large-6 columns">
            @Html.LabelWithAsterixFor(m => m.DIC)
            @Html.EditorFor(m => m.DIC)
            @Html.ValidationMessageFor(m => m.DIC)
        </div>
    </div>

    <h6>Adresa sídla společnosti</h6>
    @Html.EditorFor(m => m.SidloSpolecnosti);

    <h6>Místo podnikání</h6>
    <div class="row">
        <div class="large-6 columns">
            <label for="swPOMP" class="left inline">Je místo podnikání stejné jako "Adresa sídla společnosti"?</label>
        </div>
        <div class="large-2 columns">
            <div class="switch" id="swPOMP">
                @Html.RadioButtonFor(m => m.POJeMistoPodnikaniStejne, false, new { @id = "rbPOMPOff" })
                <label>Ne</label>
                @Html.RadioButtonFor(m => m.POJeMistoPodnikaniStejne, true, new { @id = "rbPOMPOn" })
                <label>Ano</label>
                <span></span>
            </div>
        </div>
    </div>
    <div id="divPOMistoPodnikani" @if (Model.POJeMistoPodnikaniStejne) { @Html.Raw("style=\"display:none;\"") ; }>
        @Html.EditorFor(m => m.MistoPodnikani);
    </div>
</fieldset>