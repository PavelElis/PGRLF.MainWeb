@using PGRLF.MainWeb.Forms.Enums

@model PGRLF.MainWeb.Forms.FormClasses.Templates.DeMinimis

<fieldset class="fieldset">
    <legend>Čestné prohlášení <i>de minimis</i></legend>

    <!--část 1-->
    <div class='row'>
        <div class='large-6 columns'>
            @Html.LabelWithAsterixFor(m => m.DM0Osoba.Jmeno)
            @Html.EditorFor(m => m.DM0Osoba.Jmeno)
            @Html.ValidationMessageFor(m => m.DM0Osoba.Jmeno)
        </div>
        <div class='large-6 columns'>
            @Html.LabelWithAsterixFor(m => m.DM0Osoba.IC)
            @Html.EditorFor(m => m.DM0Osoba.IC)
            @Html.ValidationMessageFor(m => m.DM0Osoba.IC)
        </div>
    </div>
    @Html.EditorFor(m => m.DM0Osoba.Adresa)


    <div class="row">
        <div class="large-12 columns">
            <p>1) Žadatel prohlašuje, že jako účetní období používá</p>
        </div>
    </div>
    <div class="row">
        <div class="large-4 columns">
            <label for="rbDM1UcetniObdobiKR">Kalendářní rok</label>
            <div class="switch">
                @Html.RadioButtonFor(m => m.DM1UcetniObdobi, DM1UcetniObdobi.KalendarniRok, new { @class = "switch-input", @id = "rbDM1UcetniObdobiKR" })
                <label class="switch-paddle" for="rbDM1UcetniObdobiKR">
                    <span class="switch-active" aria-hidden="true">Ano</span>
                    <span class="switch-inactive" aria-hidden="true">Ne</span>
                </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-4 columns">
            <label for="rbDM1UcetniObdobiHR">Hospodářský rok</label>
            <div class="switch">
                @Html.RadioButtonFor(m => m.DM1UcetniObdobi, DM1UcetniObdobi.HospodarskyRok, new { @class = "switch-input", @id = "rbDM1UcetniObdobiHR" })
                <label class="switch-paddle" for="rbDM1UcetniObdobiHR">
                    <span class="switch-active" aria-hidden="true">Ano</span>
                    <span class="switch-inactive" aria-hidden="true">Ne</span>
                </label>
            </div>
        </div>
        <div class="large-4 columns" id="divDM1UcetniObdobiZacatek" style="display: none">
            @Html.LabelWithAsterixFor(m => m.DM1HRZacatek)
            @Html.EditorFor(m => m.DM1HRZacatek)
            @Html.ValidationMessageFor(m => m.DM1HRZacatek)
        </div>
        <div class="large-4 columns" id="divDM1UcetniObdobiKonec" style="display: none">
            @Html.LabelWithAsterixFor(m => m.DM1HRKonec)
            @Html.EditorFor(m => m.DM1HRKonec)
            @Html.ValidationMessageFor(m => m.DM1HRKonec)
        </div>
    </div>

    <!--část 2-->
    <div class="row">
        <div class="large-12 columns">
            <br />
            <p>2) Podniky propojené s žadatelem o podporu</p>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <div class="callout secondary">
                @Html.Raw(@PGRLF.MainWeb.Forms.FormResources.DeMinimis2)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            Žadatel prohlašuje, že
            <br><br>
        </div>
    </div>
    <div class="row">
        <div class="large-10 columns">
            <label for="rbDM2NeniPropojen" class="middle">není ve výše uvedeném smyslu propojen s jiným podnikem</label>
        </div>
        <div class="large-2 columns">
            <div class="switch large">
                @Html.RadioButtonFor(m => m.DM2Propojeni, DM2Propojeni.NeniPropojen ,new { @class = "switch-input", @id = "rbDM2NeniPropojen" })
                <label class="switch-paddle" for="rbDM2NeniPropojen">
                    <span class="switch-active" aria-hidden="true">Ano</span>
                    <span class="switch-inactive" aria-hidden="true">Ne</span>
                </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-10 columns">
            <label for="rbDM2JePropojen" class="middle">je ve výše uvedeném smyslu propojen s následujícími podniky</label>
        </div>
        <div class="large-2 columns">
            <div class="switch large">
                @Html.RadioButtonFor(m => m.DM2Propojeni, DM2Propojeni.JePropojen, new { @class = "switch-input", @id = "rbDM2JePropojen" })
                <label class="switch-paddle" for="rbDM2JePropojen">
                    <span class="switch-active" aria-hidden="true">Ano</span>
                    <span class="switch-inactive" aria-hidden="true">Ne</span>
                </label>
            </div>
        </div>
    </div>
    <div id="divDM2Propojeni">
        <div id="divDM2PropojeniList">
            @Html.EditorForMany(m => m.DM2PropojeniList, m => m.Index)
        </div>
    </div>

    <!--část 3-->
    <div class="row">
        <div class="large-12 columns">
            <br />
            <p>3) Žadatel prohlašuje, že podnik (žadatel) v současném a 2 předcházejících účetních obdobích</p>
        </div>
    </div>
    <div class="row">
        <div class="large-10 columns">
            <label for="rbDM3NevzniklSpojenim" class="middle">nevznikl spojením podniků či nabytím podniku</label>
        </div>
        <div class="large-2 columns">
            <div class="switch large">
                @Html.RadioButtonFor(m => m.DM3Spojeni, DM3Spojeni.NevzniklSpojenim, new { @class = "switch-input", @id = "rbDM3NevzniklSpojenim" })
                <label class="switch-paddle" for="rbDM3NevzniklSpojenim">
                    <span class="switch-active" aria-hidden="true">Ano</span>
                    <span class="switch-inactive" aria-hidden="true">Ne</span>
                </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-10 columns">
            <label for="rbDM3VzniklSpojenim" class="middle">vznikl spojením (fúzí splynutím *) níže uvedených podniků:</label>
        </div>
        <div class="large-2 columns">
            <div class="switch large">
                @Html.RadioButtonFor(m => m.DM3Spojeni, DM3Spojeni.VzniklSpojenim, new { @class = "switch-input", @id = "rbDM3VzniklSpojenim" })
                <label class="switch-paddle" for="rbDM3VzniklSpojenim">
                    <span class="switch-active" aria-hidden="true">Ano</span>
                    <span class="switch-inactive" aria-hidden="true">Ne</span>
                </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-10 columns">
            <label for="rbDM3Prevzal" class="middle">nabytím (fúzí sloučením **) převzal jmění níže uvedeného/ých podniku/ů:</label>
        </div>
        <div class="large-2 columns">
            <div class="switch large">
                @Html.RadioButtonFor(m => m.DM3Spojeni, DM3Spojeni.Prevzal, new {@class = "switch-input", @id = "rbDM3Prevzal"})
                <label class="switch-paddle" for="rbDM3Prevzal">
                    <span class="switch-active" aria-hidden="true">Ano</span>
                    <span class="switch-inactive" aria-hidden="true">Ne</span>
                </label>
            </div>
        </div>
    </div>
    <div id="divDM3Spojeni">
        <div id="divDM3SpojeniList">
            @Html.EditorForMany(m => m.DM3SpojeniList, m => m.Index)
        </div>
        <div class="row">
            <div class="large-12 columns">
                Výše uvedené změny spočívající ve spojení či nabytí podniků
                <br><br>
            </div>
        </div>
        <div class="row">
            <div class="large-10 columns">
                <label for="rbDM3CRNeniZohledneno" class="middle">nejsou zohledněny v Centrálním registru podpor malého rozsahu.</label>
            </div>
            <div class="large-2 columns">
                <div class="switch large">
                    @Html.RadioButtonFor(m => m.DM3CentralniRegistr, DMCentralniRegistr.NeniZohledneno, new { @class = "switch-input", @id = "rbDM3CRNeniZohledneno" })
                    <label class="switch-paddle" for="rbDM3CRNeniZohledneno">
                        <span class="switch-active" aria-hidden="true">Ano</span>
                        <span class="switch-inactive" aria-hidden="true">Ne</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="large-10 columns">
                <label for="rbDM3CRJeZohledneno" class="middle">jsou již zohledněny v Centrálním registru podpor malého rozsahu.</label>
            </div>
            <div class="large-2 columns">
                <div class="switch large">
                    @Html.RadioButtonFor(m => m.DM3CentralniRegistr, DMCentralniRegistr.JeZohledneno, new { @class = "switch-input", @id = "rbDM3CRJeZohledneno" })
                    <label class="switch-paddle" for="rbDM3CRJeZohledneno">
                        <span class="switch-active" aria-hidden="true">Ano</span>
                        <span class="switch-inactive" aria-hidden="true">Ne</span>
                    </label>
                </div>
            </div>
        </div>
    </div>

    <!--část 4-->
    <div class="row">
        <div class="large-12 columns">
            <br />
            <p>4) Žadatel prohlašuje, že podnik (žadatel) v současném a 2 předcházejících účetních obdobích</p>
        </div>
    </div>
    <div class="row">
        <div class="large-10 columns">
            <label for="rbDM4NevzniklRozdelenim" class="middle">nevznikl rozdělením (rozštěpením nebo odštěpením ***) podniku. </label>
        </div>
        <div class="large-2 columns">
            <div class="switch large">
                @Html.RadioButtonFor(m => m.DM4Rozdeleni, DM4Rozdeleni.NevniklRozdelenim, new { @class = "switch-input", @id = "rbDM4NevzniklRozdelenim" })
                <label class="switch-paddle" for="rbDM4NevzniklRozdelenim">
                    <span class="switch-active" aria-hidden="true">Ano</span>
                    <span class="switch-inactive" aria-hidden="true">Ne</span>
                </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-10 columns">
            <label for="rbDM4VzniklRozdelenim" class="middle">vznikl rozdělením níže uvedeného podniku</label>
        </div>
        <div class="large-2 columns">
            <div class="switch large">
                @Html.RadioButtonFor(m => m.DM4Rozdeleni, DM4Rozdeleni.VzniklRozdelenim, new { @class = "switch-input", @id = "rbDM4VzniklRozdelenim" })
                <label class="switch-paddle" for="rbDM4VzniklRozdelenim">
                    <span class="switch-active" aria-hidden="true">Ano</span>
                    <span class="switch-inactive" aria-hidden="true">Ne</span>
                </label>
            </div>
        </div>
    </div>
    <div id="divDM4Rozdeleni">
        <div id="DM4RozdeleniPodporaList">
            @Html.EditorForMany(m => m.DM4RozdeleniPodporaList, m => m.Index)
        </div>
        <div class="row">
            <div class="large-12 columns">
                Výše uvedené změny spočívající v rozdělení podniků
                <br><br>
            </div>
        </div>
        <div class="row">
            <div class="large-10 columns">
                <label for="rbDM4CRNeniZohledneno" class="middle">nejsou zohledněny v Centrálním registru podpor malého rozsahu.</label>
            </div>
            <div class="large-2 columns">
                <div class="switch large">
                    @Html.RadioButtonFor(m => m.DM4CentralniRegistr, DMCentralniRegistr.NeniZohledneno, new { @class = "switch-input", @id = "rbDM4CRNeniZohledneno" })
                    <label class="switch-paddle" for="rbDM4CRNeniZohledneno">
                        <span class="switch-active" aria-hidden="true">Ano</span>
                        <span class="switch-inactive" aria-hidden="true">Ne</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="large-10 columns">
                <label for="rbDM4CRJeZohledneno" class="middle">jsou již zohledněny v Centrálním registru podpor malého rozsahu.</label>
            </div>
            <div class="large-2 columns">
                <div class="switch large">
                    @Html.RadioButtonFor(m => m.DM4CentralniRegistr, DMCentralniRegistr.JeZohledneno, new { @class = "switch-input", @id = "rbDM4CRJeZohledneno" })
                    <label class="switch-paddle" for="rbDM4CRJeZohledneno">
                        <span class="switch-active" aria-hidden="true">Ano</span>
                        <span class="switch-inactive" aria-hidden="true">Ne</span>
                    </label>
                </div>
            </div>
        </div>
    </div>

    <!--část 5-->
    <div class="row">
        <div class="large-12 columns">
            <br />
            <p>5) Žadatel níže svým podpisem</p>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <div class="callout secondary">
                @Html.Raw(@PGRLF.MainWeb.Forms.FormResources.DeMinimis5)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-6 columns">
            <label for="cbDMCestneProhlaseni" class="middle">Souhlasím</label>
        </div>
        <div class="large-4 columns">
            <label class="middle">@Html.ValidationMessageFor(m => m.DMCestneProhlaseni, string.Empty, new { @class = "switch-validation-error" })</label>
        </div>
        <div class="large-2 columns">
            <div class="switch large">
                @Html.CheckBoxFor(m => m.DMCestneProhlaseni, new { @class = "switch-input", @id = "cbDMCestneProhlaseni" })
                <label class="switch-paddle" for="cbDMCestneProhlaseni">
                    <span class="switch-active" aria-hidden="true">Ano</span>
                    <span class="switch-inactive" aria-hidden="true">Ne</span>
                </label>
            </div>
        </div>
    </div>

</fieldset>