@using PGRLF.MainWeb
@using PGRLF.MainWeb.Helpers
@model Enum
@foreach (Enum value in Enum.GetValues(Model.GetType()))
{
    var id = TagBuilder.CreateSanitizedId(string.Format(
        "{0}_{1}_{2}", ViewData.TemplateInfo.HtmlFieldPrefix, Model.GetType(), value));
    <div class="RadioButtonListItem">
        @Html.RadioButton(string.Empty, value, value.Equals(Model), new { id })
        @Html.Label(value.GetDescriptionFromEnumValue(), new { @for = id })
    </div>
}